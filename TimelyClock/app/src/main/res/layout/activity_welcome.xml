<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    tools:context="com.example.sjy.timelyclock.WelcomeActivity"
    android:layout_height="match_parent"
    >
    <RelativeLayout


        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_marginTop="30dp"
            android:text="星球右手"
            android:textSize="50dp"
            android:id="@+id/welcome_tv"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <info.hoang8f.widget.FButton
            android:layout_below="@+id/welcome_tv"
            android:id="@+id/welcome_singleplay_bt"
            app:shadowEnabled="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="150dp"
            android:minWidth="170dp"
            android:minHeight="60dp"
            app:shadowHeight="10dp"
            app:cornerRadius="15dp"
            android:text="单人游戏"
            android:textSize="25dp"
            android:gravity="center"
            android:textColor="@color/background_floating_material_dark"
            app:buttonColor="@color/fbutton_color_alizarin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <info.hoang8f.widget.FButton

            android:text="双人游戏"
            android:textSize="25dp"
            android:gravity="center"
            android:textColor="@color/background_floating_material_dark"
            android:layout_below="@+id/welcome_singleplay_bt"
            android:id="@+id/welcome_doubleplay_bt"
            app:shadowEnabled="true"
            app:buttonColor="@color/fbutton_color_alizarin"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:minWidth="170dp"
            android:minHeight="60dp"
            app:shadowHeight="10dp"
            app:cornerRadius="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <info.hoang8f.widget.FButton

            android:text="最高分"
            android:textSize="25dp"
            android:gravity="center"
            android:textColor="@color/background_floating_material_dark"
            android:layout_below="@+id/welcome_doubleplay_bt"
            android:id="@+id/welcome_score_bt"
            app:shadowEnabled="true"
            app:buttonColor="@color/fbutton_color_carrot"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:minWidth="170dp"
            android:minHeight="60dp"
            app:shadowHeight="10dp"
            app:cornerRadius="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>


</ScrollView>
